@model List<Satis>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<table class="table table-bordered">
    <tr>
        <th>Satış ID</th>
        <th>ürün ID</th>
        <th>Müşteri</th>
        <th>Adet</th>
        <th>Fiyat</th>

    </tr>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>@item.SatisId</th>
                <th>@item.Urun</th>
                <th>@item.Musteri</th>
                <th>@item.Adet</th>
                <th>@item.Fiyat</th>
            </tr>
        }
    </tbody>
    </table>
<a href="/Satis/YeniSatis/" class="btn btn-warning">Yeni Satış Ekle</a>
