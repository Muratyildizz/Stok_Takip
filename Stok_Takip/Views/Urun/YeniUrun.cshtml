@model Stok_Takip.Models.Urun
@{
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<form asp-action="YeniUrun" method="post">
    <div class="form-group">
        <label for="UrunName">Ürün Adı</label>
        <input type="text" class="form-control" id="UrunName" name="UrunName" required>
    </div>
    <div class="form-group">
        <label for="UrunCategory">Ürün Kategori</label>
        <input type="text" class="form-control" id="UrunCategory" name="UrunCategory" required>
    </div>
    <div class="form-group">
        <label for="UrunPrice">Ürün Fiyatı</label>
        <input type="text" class="form-control" id="UrunPrice" name="UrunPrice" required>
    </div>
    <div class="form-group">
        <label for="Stok">Stok</label>
        <input type="text" class="form-control" id="Stok" name="Stok" placeholder="Stok adeti giriniz" required>
    </div>
    <div>

        <button type="submit" class="btn btn-primary" id="btn3">Yeni Ürün Ekle</button>
    </div>
    <script>
        $('#btn3').click(function () {
            alert('Ekleme İşlemi Yapıldı')
        });
    </script>
</form>